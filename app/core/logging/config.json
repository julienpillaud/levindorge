{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "colored": {
      "()": "app.core.logging.formatter.ColoredFormatter"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "formatter": "colored"
    },
    "logfire": {
      "class": "logfire.LogfireLoggingHandler"
    }
  },
  "loggers": {
    "pymongo": {
      "level": "INFO",
      "handlers": ["console", "logfire"],
      "propagate": false
    },
    "urllib3": {
      "level": "INFO",
      "handlers": ["console", "logfire"],
      "propagate": false
    },
    "watchfiles": {
      "level": "WARNING",
      "handlers": ["console", "logfire"],
      "propagate": false
    }
  },
  "root": {
    "level": "DEBUG",
    "handlers": ["console", "logfire"]
  }
}
